<%= simple_form_for @permission, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :date_debut %>
  <%= f.input :date_fin %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                permissions_path, :class => 'btn' %>
  </div>
<% end %>
