<%- model_class = Personnel -%>

  <div class="page-header row">
    <div class="col-sm-10"> 
      <div class="form-actions">
        <%= link_to t('.back', :default => t("helpers.links.back")),
                    personnels_path, :class => 'btn'  %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_personnel_path(@personnel), :class => 'btn btn-primary' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    personnel_path(@personnel),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger' %>
        <%= link_to t('.pdf', :default => t("helpers.links.pdf")),
              personnel_path(@personnel, format: "pdf"), :class => 'btn-xs btn-info'  %>
