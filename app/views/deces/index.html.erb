<%- model_class = Dece -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:n_volet) %></th>
      <th><%= model_class.human_attribute_name(:date_dece) %></th>
      <th><%= model_class.human_attribute_name(:local) %></th>
      <th><%= model_class.human_attribute_name(:nom) %></th>
      <th><%= model_class.human_attribute_name(:prenom) %></th>
      <!--
      <th><%= model_class.human_attribute_name(:date_nai) %></th>
      <th><%= model_class.human_attribute_name(:lieu_nai) %></th>
      <th><%= model_class.human_attribute_name(:sexe) %></th>
      <th><%= model_class.human_attribute_name(:situ_mat) %></th>
      <th><%= model_class.human_attribute_name(:profession) %></th>
      <th><%= model_class.human_attribute_name(:domicil) %></th>
      <th><%= model_class.human_attribute_name(:nom_prenom_pere) %></th>
      <th><%= model_class.human_attribute_name(:nom_prenom_mere) %></th>
      <th><%= model_class.human_attribute_name(:nom_prenom_declare) %></th>
      <th><%= model_class.human_attribute_name(:domicil_declare) %></th>
      <th><%= model_class.human_attribute_name(:profession_declare) %></th>
      <th><%= model_class.human_attribute_name(:date_declare_dece) %></th>
      <th><%= model_class.human_attribute_name(:nom_prenom_officie) %></th>
      <th><%= model_class.human_attribute_name(:qualite_officie) %></th>
      -->
      <th><%= model_class.human_attribute_name(:date_officie) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @deces.each do |dece| %>
      <tr>
        <td><%= link_to dece.id, dece_path(dece) %></td>
        <td><%= dece.n_volet %></td>
        <td><%= dece.date_dc %></td>
        <td><%= dece.local %></td>
        <td><%= dece.nom %></td>
        <td><%= dece.prenom %></td>
        <!--
        <td><%= dece.date_nai %></td>
        <td><%= dece.lieu_nai %></td>
        <td><%= dece.sexe %></td>
        <td><%= dece.situ_mat %></td>
        <td><%= dece.profession %></td>
        <td><%= dece.domicil %></td>
        <td><%= dece.nom_prenom_pere %></td>
        <td><%= dece.nom_prenom_mere %></td>
        <td><%= dece.nom_prenom_declare %></td>
        <td><%= dece.domicil_declare %></td>
        <td><%= dece.profession_declare %></td>
        <td><%= dece.date_declare_dece %></td>
        <td><%= dece.nom_prenom_officie %></td>
        <td><%= dece.qualite_officie %></td>
      -->
        <td><%= dece.date_officie %></td>
    
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_dece_path(dece), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      dece_path(dece),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_dece_path,
            :class => 'btn btn-primary' %>
