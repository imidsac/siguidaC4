<%= simple_form_for @centre, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nom_centre %>
  <%= f.input :phone %>
  <%= f.input :address %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                centres_path, :class => 'btn' %>
  </div>
<% end %>
